{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS"
    },
    "deploy": {
        "startCommand": "gunicorn app:app --bind 0.0.0.0:$PORT",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10,
        "environmentVariables": {
            "DATABASE_URL": "${{ Postgres.DATABASE_URL }}"
        }
    }
}